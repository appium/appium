{
  "compilerOptions": {
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2015",
    "noEmit": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "mocha", "chai", "sinon-chai", "chai-as-promised"]
  },
  "include": [
    "packages/*/**/*.d.ts",
    "packages/*/**/*.js",
    "*.js"
  ],
  "exclude": ["**/node_modules/**", "**/build/**"]
}
