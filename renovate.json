{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)",
    ":preserveSemverRanges"
  ],
  "baseBranches": ["2.0"],
  "ignorePaths": ["sample-code"],
  "semanticCommits": "enabled",
  "semanticCommitScope": "{{parentDir}}",
  "schedule": ["after 10pm and before 5:00am"],
  "timezone": "America/Vancouver",
  "rangeStrategy": "bump"
}
