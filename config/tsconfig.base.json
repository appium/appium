{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "removeComments": false,
    "target": "es2015",
    "types": [
      "node",
      "mocha",
      "chai",
      "sinon-chai",
      "chai-as-promised"
    ]
  }
}
