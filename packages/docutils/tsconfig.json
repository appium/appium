{
  "extends": "@appium/tsconfig/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "checkJs": true,
    "types": ["node", "mocha", "chai", "chai-as-promised"],
    "paths": {
      "@appium/support": ["../support"],
      "@appium/types": ["../types"]
    },
    "strict": true
  },
  "include": ["./lib/**/*", "./test/**/*"],
  "references": [{"path": "../types"}, {"path": "../support"}]
}
